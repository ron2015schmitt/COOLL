

EXEC = vdeclaration  vassignment range linspace velmath vapply vcomplex vprint vscalarout vrelational vsubsets vconcatrep vslices vsort taylor fourier calculus vfile vdebug vdefinition

DOC = $(addsuffix .md,$(EXEC))

%.md: % 
	./$* > $@

%.link_md: %.md
	@echo

include ../Makefile


doc:  $(DOC)


toc:  $(addsuffix .link_md, $(basename $(DOC)))
	@echo "# Table of Contents--MathÃ©matiques  user's guide" > README.md
	@echo "_This document was automatically generated by doc/Makefile_" >> README.md
	@echo >> README.md
	@cat $^ >> README.md
	@cat README.md


cleandocs:
	@./clean $(EXEC)

restore: 
	@git checkout -- $(addsuffix .md,$(EXEC)) README.md


# usage:
