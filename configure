echo " "
echo " "






# DO NOT MAKE A NEW TAG UNLESS SPECIFIED.

if [ "${1}" == "newtag" ]; then
    echo " "
    echo -e "${BOLDON}${BLUE1}CREATING NEW REVISION NUMBER${DEFCLR}..."
    echo " "
    make -j newtag
fi
  



# make the object file library (libmathq.a)
echo " "
echo "Creating libmathq.a ..."
cd src
make -j libmathq.a
cd ..
mkdir -p lib && mv src/libmathq.a lib/

