#!/bin/bash

# TEXT ATTRIBUTES
BLACK='\033[0;30m'
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLLOW='\033[0;33m'
BLUE='\033[0;34m'
BLUE1='\033[38;5;18m'
MAGENTA='\033[0;35m'
CYAN='\033[0;36m'
GRAYlIGHT='\033[0;37m'
DEFCLR='\033[0;39m'
GRAYDARK='\033[0;90m'
REDLIGHT='\033[0;91m'
GREENLIGHT='\033[0;92m'
YELLOWLGIHT='\033[0;93m'
BLUELIGHT='\033[0;94m'
MAGNETALIGHT='\033[0;95m'
CYANLIGHT='\033[0;96m'
WHITE='\033[0;97m'

BOLDON='\e[0;1m'
BOLDOFF='\e[0;0m'

UNDERLINEON='\e[0;4m'
UNDERLINEOFF='\e[0;0m'



pwd=`pwd`
mydir=`dirname $(readlink -f $0)`
if [ "${pwd}" != "${mydir}" ]; then
    echo -e "${RED}ERROR${DEFCLR} You must run this script from its directory."
    exit -1
fi
            


# place the current path into the Makefiles
temp=`pwd | sed -e 's/\//\\\\\//g'`


DIR_TARGET=.
echo " "
echo -e "Creating ${BLUE1}${DIR_TARGET}/Makefile${DEFCLR} ..."
echo "# " >${DIR_TARGET}/Makefile
echo "# ********  AUTOMATICALLY CREATED FILE AT CONFIGURATION **********" >>${DIR_TARGET}/Makefile
echo "# ********  THIS FILE SHOULD NOT BE STORED TO GIT       **********" >>${DIR_TARGET}/Makefile
echo "" >> ${DIR_TARGET}/Makefile
echo "" >> ${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  files/Makefile                                                #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
cat files/Makefile >> ${DIR_TARGET}/Makefile
echo "" >> ${DIR_TARGET}/Makefile
echo "" >> ${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  files/Makefile.matricks                                       #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
sed -e "s/__DIR_MATRICKS__/$temp/g" files/Makefile.matricks >> ${DIR_TARGET}/Makefile 
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  files/Makefile.system                                         #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
cat files/Makefile.system >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
cp ${DIR_TARGET}/Makefile ${DIR_TARGET}/Makefile.pristine
echo " "
echo " "




DIR_TARGET=examples
echo -e "Creating ${BLUE1}${DIR_TARGET}/Makefile${DEFCLR} ..."
#mkdir -p ${DIR_TARGET}
echo "#" >${DIR_TARGET}/Makefile
echo "# ****  THIS IS AN EXAMPLE USER MAKEFILE WITH LOTS OF FEATURES***" >>${DIR_TARGET}/Makefile
echo "# ****  THIS WAS CREATED DURING  CONFIGURATION ******************" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  ./configure                                                   #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo 'EXEC += example printing testing tfoverloading depth indexing' >>${DIR_TARGET}/Makefile
echo ""
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  files/Makefile                                                #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
cat files/Makefile >> ${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  files/Makefile.matricks                                       #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
sed -e "s/__DIR_MATRICKS__/$temp/g" files/Makefile.matricks >>${DIR_TARGET}/Makefile 
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
cp ${DIR_TARGET}/Makefile ${DIR_TARGET}/Makefile.pristine
echo " "
echo " "



DIR_TARGET=benchmark
echo -e "Creating ${BLUE1}${DIR_TARGET}/Makefile${DEFCLR} ..."
#mkdir -p ${DIR_TARGET}
echo "#" >${DIR_TARGET}/Makefile
echo "# ****  THIS IS AN EXAMPLE USER MAKEFILE WITH LOTS OF FEATURES***" >>${DIR_TARGET}/Makefile
echo "# ****  THIS WAS CREATED DURING  CONFIGURATION ******************" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  ./configure                                                   #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo 'EXEC += benchmark' >>${DIR_TARGET}/Makefile
echo 'OPTIMIZE = -O3 -finline-limit=750' >>${DIR_TARGET}/Makefile
echo ""
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  files/Makefile                                                #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
cat files/Makefile >> ${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  files/Makefile.matricks                                       #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
sed -e "s/__DIR_MATRICKS__/$temp/g" files/Makefile.matricks >>${DIR_TARGET}/Makefile 
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
cp ${DIR_TARGET}/Makefile ${DIR_TARGET}/Makefile.pristine



DIR_TARGET=test
echo -e "Creating ${BLUE1}${DIR_TARGET}/Makefile${DEFCLR} ..."
#mkdir -p ${DIR_TARGET}
echo "#" >${DIR_TARGET}/Makefile
echo "# ****  THIS IS AN EXAMPLE USER MAKEFILE WITH LOTS OF FEATURES***" >>${DIR_TARGET}/Makefile
echo "# ****  THIS WAS CREATED DURING  CONFIGURATION ******************" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  ./configure                                                   #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo 'EXEC += misctest ScalarTest ScalarTestComplex vtest mtest ttest' >>${DIR_TARGET}/Makefile
echo ""
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  files/Makefile                                                #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
cat files/Makefile >> ${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
echo "#  files/Makefile.matricks                                       #" >>${DIR_TARGET}/Makefile
echo "##################################################################" >>${DIR_TARGET}/Makefile
sed -e "s/__DIR_MATRICKS__/$temp/g" files/Makefile.matricks >>${DIR_TARGET}/Makefile 
echo "" >>${DIR_TARGET}/Makefile
echo "" >>${DIR_TARGET}/Makefile
cp ${DIR_TARGET}/Makefile ${DIR_TARGET}/Makefile.pristine






# DO NOT MAKE A NEW TAG UNLESS SPECIFIED.

if [ "${1}" == "newtag" ]; then
    echo " "
    echo -e "${BOLDON}${BLUE1}CREATING NEW REVISION NUMBER${DEFCLR}..."
    echo " "
    make -j newtag
fi
  



# make the object file library (libmatricks.a)
echo " "
echo "Creating libmatricks.a ..."
cd src
make -j libmatricks.a
cd ..
mkdir -p lib && mv src/libmatricks.a lib/

