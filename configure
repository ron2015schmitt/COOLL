#!/bin/bash


# place the current path into the Makefiles
temp=`pwd | sed -e 's/\//\\\\\//g'`
sed -e "s/#MATRICKS_DIR#/$temp/g" MakefileTemplate > Makefile
sed -e "s/#MATRICKS_DIR#/$temp/g" SampleMakefileTemplate > examples/SampleMakefile


# make the object file library (libmatricks.a)
make libmatricks



